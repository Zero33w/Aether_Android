<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aether_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/azul_01</item>
        <item name="colorOnSurface">@color/azul_01_hint</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/blanco_01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_01</item>
        <item name="colorSecondaryVariant">@color/azul_01</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/azul_01</item>
        <!-- Font family. -->
        <item name="android:textViewStyle">@style/fontFamilyPredeterminada</item>
        <item name="android:actionMenuTextColor">@color/blanco_01</item>
        <item name="drawerArrowStyle">@style/IconoMenu</item>
    </style>
    <!-- Font Family style -->
    <style name="fontFamilyPredeterminada" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Menu style -->
    <style name="MenuLateral">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="IconoMenu" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/azul_01</item>
    </style>

    <style name="Theme.Aether_app.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Aether_app.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Aether_app.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>